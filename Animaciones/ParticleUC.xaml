<UserControl x:Class="Animaciones.ParticleUC" SizeChanged="UserControl_SizeChanged"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Animaciones"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Ellipse x:Name="Body" Fill="{Binding brush}"/>
        <TextBlock Text="{Binding signo}" VerticalAlignment="Center"
                   HorizontalAlignment="Center" x:Name="txtSigno"/>
    </Grid>
</UserControl>
