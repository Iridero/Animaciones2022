<Window x:Class="Animaciones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animaciones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Ellipse x:Name="bolita" Fill="Red" Width="20" Height="20" 
                 Canvas.Left="30" Canvas.Top="100">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="bolitaTranslate" />
            </Ellipse.RenderTransform>
        </Ellipse>
        <Button Click="btnAnimaBolita_Click" Canvas.Top="130" x:Name="btnAnimaBolita">Animar</Button>
    </Canvas>
</Window>
